<div class="container-fluid">
    <div class="social-dash-wrap">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-main">
                    <h4 class="text-capitalize breadcrumb-title"><%- __('pages-edit-title') %></h4>
                    <div class="breadcrumb-action justify-content-center flex-wrap">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#"><i class="las la-home"></i>Halaman</a></li>
                                <li class="breadcrumb-item active" aria-current="page"><%- __('pages-edit-title') %></li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <% if(notification.length != 0) { %>
                    <div class=" alert alert-<%= notification[0].type %> " role="alert">
                        <div class="alert-content">
                            <p><%= notification[0].message %></p>
                        </div>
                    </div>
                <% } %>

                <div class="card card-Vertical card-default card-md mb-4">
                    <div class="card-body pb-md-30">
                        <div class="Vertical-form">
                            <form action="<%- locals.base %>pages/<%= pages.slug %>" method="post">
                                <div class="form-group">
                                    <label for="title" class="color-dark fs-14 fw-500 align-center mb-10">Judul</label>
                                    <input type="text" class="form-control ih-medium ip-gray radius-xs b-light px-15" id="title" name="pages" placeholder="Syarat dan Ketentuan" value="<%= pages.pages %>" readonly required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="description" class="color-dark fs-14 fw-500 align-center mb-10">Deskripsi</label>
                                    <div class="bg-white mb-25 radius-xl">
                                        <div class="reply-form pt-0">
                                            <div class="mailCompose-form-content">
                                                <div class="form-group">
                                                    <textarea name="body" id="mail-reply-message2" class="form-control-lg" placeholder=" Muara mbaduk merupakan wisata..."><%= pages.body %></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="layout-button flex justify-content-end mt-25">
                                    <button type="submit" class="btn btn-primary btn-default btn-squared px-30">Simpan Perubahan</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>