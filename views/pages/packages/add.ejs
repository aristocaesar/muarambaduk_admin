<div class="container-fluid">
    <div class="social-dash-wrap">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-main">
                    <h4 class="text-capitalize breadcrumb-title"><%- __('add-packages-title') %></h4>
                    <div class="breadcrumb-action justify-content-center flex-wrap">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/packages"><i class="las la-home"></i><%- __('packages-menu-title') %></a></li>
                                <li class="breadcrumb-item active" aria-current="page"><%- __('add-packages-title') %></li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <% if(notification.length != 0) { %>
                    <div class=" alert alert-<%= notification[0].type %> " role="alert">
                        <div class="alert-content">
                            <p><%= notification[0].message %></p>
                        </div>
                    </div>
                <% } %>

                <div class="card card-Vertical card-default card-md mb-4">
                    <div class="card-body pb-md-30">
                        <div class="Vertical-form">
                            <form action="" method="post">
                                <div class="account-profile d-flex align-items-center mt-4 mb-5">
                                    <div class="ap-img pro_img_wrapper">
                                        <input id="image-file-upload" type="text" name="image" value="https://api.muarambaduk.biz.id/static/uploads/default-product.png" class="d-none">
                                        <input id="file-upload" type="file" class="d-none">
                                        <label for="file-upload">
                                            <img class="ap-img__main rounded-circle wh-120 bg-lighter d-flex" src="https://api.muarambaduk.biz.id/static/uploads/default-product.png" alt="profile">
                                            <span class="cross" id="remove_pro_pic">
                                                <img src="<%- locals.base %>img/svg/camera.svg" alt="camera" class="svg">
                                            </span>
                                        </label>
                                    </div>
                                    <div class="account-profile__title">
                                        <h6 class="fs-15 ms-20 fw-500 text-capitalize">Foto paket</h6>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="title" class="color-dark fs-14 fw-500 align-center mb-10">Nama Paket</label>
                                    <input type="text" class="form-control ih-medium ip-gray radius-xs b-light px-15" id="title" name="title" placeholder="Paket Premium Special Kaps. 6 Orang" oninput="productSetSlug(this)" required>
                                </div>
                                <div class="form-group">
                                    <label for="slug" class="color-dark fs-14 fw-500 align-center mb-10">Slug</label>
                                    <input type="text" class="form-control ih-medium ip-gray radius-xs b-light px-15" id="slug" name="slug" placeholder="paket-premium-special-kaps-6-orang" readonly required>
                                </div>
                                <div class="form-group">
                                    <label for="categoryOption" class="color-dark fs-14 fw-500 align-center mb-10">Kategori</label>
                                    <select id="categoryOption" class="form-control py-3" name="category">
                                        <option value="general">Umum - Dapat dibeli oleh semua wisatawan</option>
                                        <option value="custom">Kustom - Hanya dapat dibeli oleh wisatawan yang telah ditentukan</option>
                                      </select>
                                </div>
                                <div class="form-group">
                                    <label for="description" class="color-dark fs-14 fw-500 align-center mb-10">Deskripsi</label>
                                    <textarea class="form-control" name="description" id="description" rows="5" placeholder="Paket Premium Special Kaps. 6 Orang merupakan ..." required></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="price" class="color-dark fs-14 fw-500 align-center mb-10">Harga Sewa</label>
                                    <input type="text" class="form-control ih-medium ip-gray radius-xs b-light px-15" id="price" name="price" placeholder="Rp. 100.000" oninput="toRupiah(this)" required>
                                </div>
                                <div class="layout-button flex justify-content-end mt-25">
                                    <a href="<%- locals.base %>packages" class="btn btn-default btn-squared btn-light px-35 ">Batal</a>
                                    <button type="submit" class="btn btn-primary btn-default btn-squared px-30">Simpan & Tambahkan Item Produk</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>