<div class="container-fluid">
    <div class="social-dash-wrap">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-main">
                    <h4 class="text-capitalize breadcrumb-title"><%- __('admin-add-title') %></h4>
                    <div class="breadcrumb-action justify-content-center flex-wrap">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin"><i class="las la-home"></i>Administrator</a></li>
                                <li class="breadcrumb-item active" aria-current="page"><%- __('admin-add-title') %></li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <% if(notification.length != 0) { %>
                    <div class=" alert alert-<%= notification[0].type %> " role="alert">
                        <div class="alert-content">
                            <p><%= notification[0].message %></p>
                        </div>
                    </div>
                <% } %>

                <div class="card card-Vertical card-default card-md mb-4">
                    <div class="card-body pb-md-30">
                        <div class="Vertical-form">
                            <form action="" method="post">
                                <div class="form-group">
                                    <label for="fullname" class="color-dark fs-14 fw-500 align-center mb-10">Nama Lengkap</label>
                                    <input type="text" class="form-control ih-medium ip-gray radius-xs b-light px-15" id="fullname" name="fullname" min="6" placeholder="Aristo Caesar Pratama" required>
                                </div>

                                <div class="form-group">
                                    <label for="email" class="color-dark fs-14 fw-500 align-center mb-10">Email</label>
                                    <input type="email" class="form-control ih-medium ip-gray radius-xs b-light px-15" id="email" name="email" placeholder="hi@aristocaesar.my.id" required>
                                </div>

                                <div class="form-group">
                                    <label for="password" class="color-dark fs-14 fw-500 align-center mb-10">Password</label>
                                    <div class="position-relative">
                                        <input id="password-field" type="password" class="form-control ih-medium ip-gray radius-xs b-light px-15" name="password" placeholder="Masukkan Password" required>
                                        <div toggle="#password-field" class="uil uil-eye-slash text-lighten fs-15 field-icon toggle-password2">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="password" class="color-dark fs-14 fw-500 align-center mb-10">Konfirmasi Password</label>
                                    <div class="position-relative">
                                        <input id="password-field" type="password" class="form-control ih-medium ip-gray radius-xs b-light px-15" name="password_confirm" placeholder="12345678" required>
                                        <div toggle="#password-field" class="uil uil-eye-slash text-lighten fs-15 field-icon toggle-password2">
                                        </div>
                                    </div>
                                </div>

                                <div class="layout-button flex justify-content-end mt-25">
                                    <a href="<%- locals.base %>admin" class="btn btn-default btn-squared btn-light px-35 ">Batal</a>
                                    <button type="submit" class="btn btn-primary btn-default btn-squared px-30">Simpan</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>