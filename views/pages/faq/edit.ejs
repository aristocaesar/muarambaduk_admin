<div class="container-fluid">
    <div class="social-dash-wrap">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-main">
                    <h4 class="text-capitalize breadcrumb-title"><%- __('faq-edit-title') %></h4>
                    <div class="breadcrumb-action justify-content-center flex-wrap">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/faq"><i class="las la-home"></i>Faq</a></li>
                                <li class="breadcrumb-item active" aria-current="page"><%- __('faq-edit-title') %></li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <% if(notification.length != 0) { %>
                    <div class=" alert alert-<%= notification[0].type %> " role="alert">
                        <div class="alert-content">
                            <p><%= notification[0].message %></p>
                        </div>
                    </div>
                <% } %>

                <div class="card card-Vertical card-default card-md mb-4">
                    <div class="card-body pb-md-30">
                        <div class="Vertical-form">
                            <form action="" method="post">
                                <div class="form-group">
                                    <label for="title" class="color-dark fs-14 fw-500 align-center mb-10">Judul</label>
                                    <input type="text" class="form-control ih-medium ip-gray radius-xs b-light px-15" id="title" name="title" placeholder="Bagaimana proses pembelian tiket secara offline" value="<%= faq.title %>" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="description" class="color-dark fs-14 fw-500 align-center mb-10">Deskripsi</label>
                                    <textarea class="form-control" name="description" id="description" rows="5" placeholder="Pembelian tiket secara offline data dilakukan dengan ..." required><%= faq.description %></textarea>
                                </div>

                                <div class="layout-button flex justify-content-end mt-25">
                                    <a href="<%- locals.base %>faq" class="btn btn-default btn-squared btn-light px-35 ">Batal</a>
                                    <button type="submit" class="btn btn-primary btn-default btn-squared px-30">Simpan</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>