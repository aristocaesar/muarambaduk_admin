<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-main user-member justify-content-sm-between ">
                <div class=" d-flex flex-wrap justify-content-center breadcrumb-main__wrapper">
                    <div class="d-flex align-items-center user-member__title justify-content-center me-sm-25">
                        <h4 class="text-capitalize fw-500 breadcrumb-title">Daftar Pengguna<h4>
                    </div>
                </div>
                <form action="<%- locals.base %>users" method="get" class="d-flex align-items-center user-member__form my-sm-0 my-2">
                    <img src="<%- locals.base %>img/svg/search.svg" alt="search" class="svg">
                    <input class="form-control me-sm-2 border-0 box-shadow-none" type="search" name="search" placeholder="Cari berdasarkan nama" aria-label="Search" value="<%= keyword %>">
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <% if(notification.length != 0) { %>
            <div class="col-lg-12 mb-3">
                    <div class=" alert alert-<%= notification[0].type %> " role="alert">
                        <div class="alert-content">
                            <p><%= notification[0].message %></p>
                        </div>
                    </div>
            </div>
        <% } %>
        <div class="col-lg-12">
            <div class="userDatatable global-shadow border-0 p-30 bg-white radius-xl w-100 mb-30">
                <div class="table-responsive">
                    <table class="table mb-0 table-borderless">
                        <thead>
                            <tr class="userDatatable-header">
                                <th>
                                    <span class="userDatatable-title">No</span>
                                </th>
                                <th>
                                    <span class="userDatatable-title">Nama</span>
                                </th>
                                <th>
                                    <span class="userDatatable-title">Akses</span>
                                </th>
                                <th>
                                    <span class="userDatatable-title float-end">Aksi</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            <%if (users.length === 0) { %>
                                <tr>
                                    <td colspan="7"><p class="text-center">Tidak ada pengguna !</p></td>
                                 </tr>
                            <% }else{ %>
                                <% for(var index=0; index < users.length; index++) { %>

                                    <tr>
                                        <td>
                                            <%= index+1 %>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="userDatatable-inline-title">
                                                    <a href="<%- locals.base %>users/edit/<%= users[index].id %>" class="text-dark fw-500">
                                                        <h6><%= users[index].fullname %></h6>
                                                    </a>
                                                    <p class="d-block mb-0">
                                                        <%= users[index].email %>
                                                    </p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="dm-badge-text">
                                                <span class="badge-dot dot-<%= users[index].access == 'active' ? 'success' : 'danger' %> "></span>
                                                <span><%= users[index].access == 'active' ? 'Aktif' : 'Ditangguhkan' %></span>
                                            </div
                                        </td>
                                        <td>
                                            <ul class="orderDatatable_actions mb-0 d-flex flex-wrap">
                                                <li>
                                                    <a href="<%- locals.base %>users/edit/<%= users[index].id %>" class="edit">
                                                        <i class="uil uil-edit"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#" class="remove" data-bs-toggle="modal" data-bs-target="#modal-info-delete" onclick="
                                                        document.getElementById('form-action-delete').setAttribute('action', '<%- locals.base %>users/delete/<%= users[index].id %>')
                                                        document.getElementById('title-admin-action-delete').innerText = 'Apakah anda ingin menghapus pengguna <%= users[index].fullname %> ?'; 
                                                    ">
                                                        <i class="uil uil-trash-alt"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>

                                <% } %>
                            <% } %>
                        
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-end pt-30">
                    <nav class="dm-page ">
                        <ul class="dm-pagination d-flex">
                            <li class="dm-pagination__item">
                                <a href="#" class="dm-pagination__link pagination-control"><span class="la la-angle-left"></span></a>
                                <a href="#" class="dm-pagination__link active"><span class="page-number">1</span></a>
                                <a href="#" class="dm-pagination__link pagination-control"><span class="la la-angle-right"></span></a>
                                <a href="#" class="dm-pagination__option">
                                </a>
                            </li>
                            <li class="dm-pagination__item">
                                <div class="paging-option">
                                    <select name="page-number" class="page-selection">
                                        <option value="20">20</option>
                                        <option value="40">40</option>
                                        <option value="60">60</option>
                                    </select>
                                </div>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>                   
</div>

<div class="modal-info-delete modal fade show" id="modal-info-delete" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-info" role="document">
        <div class="modal-content">
            <form id="form-action-delete" action="" method="post">
                <div class="modal-body">
                    <div class="modal-info-body d-flex">
                        <div class="modal-info-icon warning">
                            <img src="<%- locals.base %>img/svg/alert-circle.svg" alt="alert-circle" class="svg">
                        </div>
                        <div class="modal-info-text">
                            <h6 id="title-admin-action-delete">Apakah anda ingin menghapus penguna ?</h6>
                            <p>Setelah terhapus pengguna tidak dapat dikembalikan</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light btn-outlined btn-sm" data-bs-dismiss="modal">Batal</button>
                    <button type="submit" class="btn btn-primary btn-sm" data-bs-dismiss="modal">Ya, Hapus</button>
                </div>
            </form>
        </div>
    </div>
</div>