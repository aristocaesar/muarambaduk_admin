<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-main user-member justify-content-sm-between ">
                <div class=" d-flex flex-wrap justify-content-center breadcrumb-main__wrapper">
                    <div class="d-flex align-items-center user-member__title justify-content-center me-sm-25">
                        <h4 class="text-capitalize fw-500 breadcrumb-title">Daftar Tiket<h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <% if(notification.length != 0) { %>
            <div class="col-lg-12 mb-3">
                    <div class=" alert alert-<%= notification[0].type %> " role="alert">
                        <div class="alert-content">
                            <p><%= notification[0].message %></p>
                        </div>
                    </div>
            </div>
        <% } %>
        <div class="col-lg-12">
            <div class="userDatatable global-shadow border-0 p-30 bg-white radius-xl w-100 mb-30">
                <div class="table-responsive">
                    <table class="table mb-0 table-borderless">
                        <thead>
                            <tr class="userDatatable-header">
                                <th>
                                    <span class="userDatatable-title">No</span>
                                </th>
                                <th>
                                    <span class="userDatatable-title">Nama</span>
                                </th>
                                <th>
                                    <span class="userDatatable-title">Hari Biasa</span>
                                </th>
                                <th>
                                    <span class="userDatatable-title">Hari Libur</span>
                                </th>
                                <th>
                                    <span class="userDatatable-title float-end">Aksi</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            <%if (tickets.length === 0) { %>
                                <tr>
                                    <td colspan="7"><p class="text-center">Tidak ada tiket !</p></td>
                                 </tr>
                            <% }else{ %>
                                <% for(var index=0; index < tickets.length; index++) { %>

                                    <tr>
                                        <td>
                                            <%= index+1 %>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="userDatatable-inline-title">
                                                    <a href="<%- locals.base %>tickets/edit/<%= tickets[index].id %>" class="text-dark fw-500">
                                                        <h6><%= tickets[index].title %></h6>
                                                    </a>
                                                    <p class="d-block mb-0">
                                                        <%= tickets[index].category %>
                                                    </p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <small class="text-light"><%= tickets[index].normal_day %></small>
                                        </td>
                                        <td>
                                            <small class="text-light"><%= tickets[index].weekend_day %></small>
                                        </td>
                                        <td>
                                            <ul class="orderDatatable_actions mb-0 d-flex flex-wrap">
                                                <li>
                                                    <a href="<%- locals.base %>tickets/edit/<%= tickets[index].id %>" class="edit">
                                                        <i class="uil uil-edit"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>

                                <% } %>
                            <% } %>
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>                   
</div>